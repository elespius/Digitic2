<div
  class="
    <%= stimulus_id %>
    rounded-lg
    border
    border-gray-100
    border-gray-100
    overflow-hidden
  "
  data-controller="<%= stimulus_id %>"
>
  <table class=" table-auto w-full border-collapse ">
    <colgroup>
      <% @columns.each do |column| %>
        <col class="<%= column.class_name %>">
      <% end %>
    </colgroup>

    <thead class="bg-gray-15 color-gray-100">
      <tr>
        <% @columns.each do |column| %>
          <th
            class="
              border-b
              border-gray-100
              py-3
              px-4
              text-[#4f4f4f]
              text-left
              text-3.5
              font-[600]
              line-[120%]
            "
          ><%= render_header_cell(column.header) %></th>
        <% end %>
      </tr>
    </thead>

    <tbody class="bg-white text-3.5 line-[150%] text-black">
      <% @rows.each do |row| %>
        <tr class="border-b border-gray-100">
          <% @columns.each do |column| %>
            <td class="py-2 px-4 "><%= render_data_cell(column.data, row) %></td>
          <% end %>
        </tr>
      <% end %>

      <% if @rows.empty? && @model_class %>
        <tr>
          <td colspan="<%= @columns.size %>" class="text-center py-4 text-3.5 line-[150%] text-black bg-white">
            <%= t('.no_resources_found', resources: @model_class.model_name.human.pluralize) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
