<%= search_form_for @search, :url => spree.admin_report_path(:sales_total)  do |s| %>
  <div class="date-range-filter field align-center">
    <%= label_tag :q_completed_at_gt, Spree.t(:start), :class => 'inline' %>
    <%= s.text_field :completed_at_gt, :class => 'datepicker datepicker-from', :value => @completed_at_gt %>

    <span class="range-divider">
      <i class="fa fa-arrow-right"></i>
    </span>

    <%= s.text_field :completed_at_lt, :class => 'datepicker datepicker-to', :value => @completed_at_lt %>
    <%= label_tag :q_completed_at_lt, Spree.t(:end), :class => 'inline' %>
  </div>

  <div class="actions filter-actions">
    <%= button Spree.t(:search), 'search'  %>
  </div>
<% end %>
