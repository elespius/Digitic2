<%= render :partial => 'solidus/admin/shared/product_tabs', :locals => { :current => 'Variants' } %>

<%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @variant } %>

<%= form_for [:admin, @product, @variant] do |f| %>
  <fieldset class="no-border-top">
    <div data-hook="admin_variant_edit_form">
      <%= render :partial => 'form', :locals => { :f => f } %>
    </div>

    <% if can?(:update, @variant) %>
      <%= render :partial => 'solidus/admin/shared/edit_resource_links' %>
    <% end %>
  </fieldset>
<% end %>
