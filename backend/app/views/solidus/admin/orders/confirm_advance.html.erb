<%= render partial: 'solidus/admin/shared/order_tabs', locals: {current: 'Confirm'} %>

<% content_for :page_title do %>
  <i class="fa fa-arrow-right"></i> <%= Solidus.t(:confirm_order) %>
<% end %>

<div class="form-buttons filter-actions actions" data-hook="complete-order-button">
  <div><%= Solidus.t(:order_please_refresh) %></div><br/>
  <%= button_to [:advance, :admin, @order], {class: 'button fa fa-refresh', method: 'put'} do %>
    <%= Solidus.t(:order_refresh_totals) %>
  <% end %>
</div>
