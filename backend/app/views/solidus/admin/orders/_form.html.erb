 <div data-hook="admin_order_form_fields">
  <% if @line_item.try(:errors).present? %>
    <%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @line_item } %>
  <% end %>

  <% if Solidus::Order.checkout_step_names.include?(:delivery) %>
    <%= render :partial => "solidus/admin/orders/carton", :collection => @order.cartons.order(:shipped_at), :locals => { :order => order } %>
    <%= render :partial => "solidus/admin/orders/shipment", :collection => @order.shipments.order(:created_at), :locals => { :order => order } %>
  <% else %>
    <%= render :partial => "solidus/admin/orders/line_items", :locals => { :order => order } %>
  <% end %>
  <%= render :partial => "solidus/admin/orders/adjustments", :locals => {
        :adjustments => @order.line_item_adjustments, 
        :order => order,
        :title => Solidus.t(:line_item_adjustments)
   } %>
  <%= render :partial => "solidus/admin/orders/adjustments", :locals => {
        :adjustments => @order.shipment_adjustments, 
        :order => order,
        :title => Solidus.t(:shipment_adjustments)
   } %>
  <%= render :partial => "solidus/admin/orders/adjustments", :locals => {
        :adjustments => @order.adjustments, 
        :order => order,
        :title => Solidus.t(:order_adjustments)
   } %>

  <% if order.line_items.exists? %>
    <fieldset class="no-border-bottom" id="order-total" data-hook="order_details_total">
      <legend><%= Solidus.t(:order_total) %></legend>
      <span class="order-total"><%= order.display_total %></span>
    </fieldset>
  <% end %>

  <%= javascript_tag do -%>
    var order_number = '<%= @order.number %>';
    var shipments = [];

    <% @order.shipments.each do |shipment| %>
            shipments.push(<%== shipment.as_json(:root => false, :only => [:id, :tracking, :number, :state, :stock_location_id], :include => [:inventory_units, :stock_location]).to_json %>);
    <% end %>
    <%= render :partial => 'solidus/admin/shared/update_order_state', :handlers => [:js] %>
  <% end -%>
</div>
