<%= render partial: 'solidus/admin/shared/order_tabs', locals: {current: 'Payments'} %>

<% content_for :page_title do %>
  <i class="fa fa-arrow-right"></i> <%= link_to "#{Solidus.t(:payment)} #{@refund.payment.id}", admin_order_payment_path(@refund.payment.order, @refund.payment) %>
  <i class="fa fa-arrow-right"></i> <%= Solidus.t(:new_refund) %>
<% end %>

<%= form_for [:admin, @refund.payment.order, @refund.payment, @refund] do |f| %>
  <fieldset class="no-border-top">
    <div data-hook="admin_refund_form_fields" class="row">
      <div class="alpha three columns">
        <div class="field">
          <%= Solidus.t(:payment_amount) %><br/>
          <%= @refund.payment.amount %>
        </div>
      </div>
      <div class="alpha three columns">
        <div class="field">
          <%= Solidus.t(:credit_allowed) %><br/>
          <%= @refund.payment.credit_allowed %>
        </div>
      </div>
      <div class="alpha three columns">
        <div class="field">
          <%= f.label :amount, Solidus.t(:amount) %><br/>
          <%= f.text_field :amount, class: 'fullwidth' %>
        </div>
      </div>
      <div class="alpha three columns">
        <div class="field">
          <%= f.label :refund_reason_id, Solidus.t(:reason) %><br/>
          <%= f.collection_select(:refund_reason_id, refund_reasons, :id, :name, {include_blank: true}, {class: 'select2 fullwidth'}) %>
        </div>
      </div>
    </div>

    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Solidus.t(:refund), 'ok' %>
      <span class="or"><%= Solidus.t(:or) %></span>
      <%= button_link_to Solidus.t('actions.cancel'), admin_order_payments_url(@refund.payment.order), icon: 'remove' %>
    </div>
  </fieldset>
<% end %>
