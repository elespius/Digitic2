<% content_for :page_title do %>
  <%= Solidus.t(:editing_property) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Solidus.t(:back_to_properties_list), admin_properties_url, :icon => 'arrow-left'%></li>
<% end %>

<%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @property } %>

<%= form_for [:admin, @property] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'solidus/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
