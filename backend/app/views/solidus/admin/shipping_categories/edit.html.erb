<%= render :partial => 'solidus/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Solidus.t(:editing_shipping_category) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Solidus.t(:back_to_shipping_categories), spree.admin_shipping_categories_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @shipping_category } %>

<%= form_for [:admin, @shipping_category] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'solidus/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
