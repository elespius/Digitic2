<fieldset data-hook="store-credit">
  <legend align="center"><%= Solidus.t(:store_credit, scope: :store_credit) %></legend>

  <div class="row">
    <div class="alpha six columns">
      <dl>
        <dt><%= Solidus.t(:category) %>:</dt>
        <dd><%= payment.source.category.name%></dd>

        <dt><%= Solidus.t(:memo) %>:</dt>
        <dd><%= payment.source.memo %></dd>

        <dt><%= Solidus.t(:created_by) %>:</dt>
        <dd><%= payment.source.created_by.email %></dd>

        <dt><%= Solidus.t(:issued_on, scope: [:admin, :store_credits]) %>:</dt>
        <dd><%= l payment.source.created_at.to_date %></dd>
      </dl>
    </div>
  </div>
</fieldset>
