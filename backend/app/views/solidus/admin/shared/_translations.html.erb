    :edit                     => Solidus.t(:edit,    :scope => :actions),
    :save                     => Solidus.t(:save,    :scope => :actions),
    :cancel                   => Solidus.t(:cancel,  :scope => :actions),
    :first_day                => Solidus.t(:first_day,
                                         :scope => 'date_picker',
