<% if can?(:update, resource) %>
  <%= link_to_with_icon 'edit', Solidus.t('actions.edit'), '#', no_text: true, data: { action: 'edit', id: resource.id } %>
  <%= link_to_with_icon 'check', Solidus.t('actions.update'), '#', no_text: true, data: update_data.merge(action: 'green', id: resource.id) %>
  <%= link_to_with_icon 'void', Solidus.t('actions.cancel'), '#', no_text: true, data: { action: 'red', id: resource.id } %>
<% end %>
