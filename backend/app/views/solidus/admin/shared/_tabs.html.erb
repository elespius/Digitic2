<% if can? :admin, Solidus::Order %>
  <%= tab *Solidus::BackendConfiguration::ORDER_TABS, icon: 'shopping-cart' %>
<% end %>

<% if can? :admin, Solidus::Product %>
  <%= tab *Solidus::BackendConfiguration::PRODUCT_TABS, icon: 'th-large' do %>
    <%- render partial: 'solidus/admin/shared/product_sub_menu' %>
  <%- end %>
<% end %>

<% if can? :admin, :reports %>
  <%= tab *Solidus::BackendConfiguration::REPORT_TABS, icon: 'file'  %>
<% end %>

<% if can? :admin, :general_settings %>
  <%= tab *Solidus::BackendConfiguration::CONFIGURATION_TABS, label: Spree.t(:settings), icon: 'wrench', url: spree.edit_admin_general_settings_path %>
<% end %>

<% if can? :admin, Solidus::Promotion %>
  <%= tab *Solidus::BackendConfiguration::PROMOTION_TABS, url: spree.admin_promotions_path, icon: 'bullhorn' do %>
    <%- render partial: 'solidus/admin/shared/promotion_sub_menu' %>
  <%- end %>
<% end %>

<% if can? :admin, Solidus::StockItem %>
  <%= tab(:stock_items, :stock_transfers, url: spree.admin_stock_items_path, label: Spree.t(:stock), icon: 'cubes', match_path: %r(^/admin/stock)) do %>
    <%- render partial: 'solidus/admin/shared/stock_sub_menu' %>
  <%- end %>
<% end %>

<% if Spree.user_class && can?(:admin, Spree.user_class) %>
  <%= tab *Solidus::BackendConfiguration::USER_TABS, url: spree.admin_users_path, icon: 'user' %>
<% end %>
