<% content_for :page_actions do %>
  <li><%= button_link_to Solidus.t(:back_to_products_list), session[:return_to] || admin_products_url, :icon => 'arrow-left' %></li>
  <% if can?(:create, Solidus::Product) %>
    <li id="new_product_link">
      <%= button_link_to Solidus.t(:new_product), new_object_url, { :icon => 'plus', :id => 'admin_new_product' } %>
    </li>
  <% end %>
<% end %>

<%= render :partial => 'solidus/admin/shared/product_tabs', :locals => { :current => 'Product Details' } %>
<%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @product } %>

<%= form_for [:admin, @product], :method => :put, :html => { :multipart => true } do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <% if can?(:update, @product) %>
      <%= render :partial => 'solidus/admin/shared/edit_resource_links' %>
    <% end %>
  </fieldset>
<% end %>
