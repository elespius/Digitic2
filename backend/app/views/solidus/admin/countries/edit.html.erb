<%= render :partial => 'solidus/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Solidus.t(:editing_country) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Solidus.t(:back_to_countries_list), solidus.admin_countries_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @country } %>

<%= form_for [:admin, @country] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div class="clear"></div>
    <%= render :partial => 'solidus/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
