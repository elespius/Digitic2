<%= render :partial => 'solidus/admin/shared/order_tabs', :locals => { :current => 'Adjustments' } %>

<% content_for :page_title do %>
  <i class="fa fa-arrow-right"></i> <%= Solidus.t(:edit) %> <%= Solidus.t(:adjustment) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Solidus.t(:back_to_adjustments_list), spree.admin_order_adjustments_url(@order), :icon => 'arrow-left' %></li>
<% end %>

<%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @adjustment } %>
<%= form_for @adjustment, :url => admin_order_adjustment_path(@order, @adjustment), :method => :put do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>

    <div class="filter-actions actions" data-hook="buttons">
      <%= button Solidus.t(:continue), 'arrow-right' %>
      <span class="or"><%= Solidus.t(:or) %></span>
      <%= link_to_with_icon 'remove', Solidus.t('actions.cancel'), admin_order_adjustments_url(@order), :class => 'button' %>
    </div>
  </fieldset>
<% end %>
