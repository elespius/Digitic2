<%= render :partial => 'solidus/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Solidus.t(:new_payment_method) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Solidus.t(:back_to_payment_methods_list), admin_payment_methods_path, :icon => 'arrow-left' %>
  </li>  
<% end %>

<%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @payment_method } %>

<%= form_for @payment_method, :url => collection_url do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div data-hook="buttons" class="filter-actions actions">
      <%= button Solidus.t(:create), 'ok' %>
    </div>
  </fieldset>
<% end %>
