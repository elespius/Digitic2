<%= render :partial => 'solidus/admin/shared/order_tabs', :locals => { :current => 'Return Authorizations' } %>

<% content_for :page_title do %>
  <i class="fa fa-arrow-right"></i> <%= Solidus.t(:new_return_authorization) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Solidus.t(:back_to_return_authorizations_list), spree.admin_order_return_authorizations_url, :icon => 'arrow-left' %></li>
<% end %>

<%= render :partial => 'solidus/shared/error_messages', :locals => { :target => @return_authorization } %>
<%= form_for [:admin, @order, @return_authorization] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>

    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= button Solidus.t(:create), 'ok' %>
      <span class="or"><%= Solidus.t(:or) %></span>
      <%= button_link_to Solidus.t('actions.cancel'), admin_order_return_authorizations_url(@order), :icon => 'remove' %>
    </div>
  </fieldset>
<% end %>
