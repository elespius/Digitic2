<td colspan="5">
  {{#if editing}}
    <label>{{ t "tracking" }}:</label>
    <input type="text" name="tracking" value="{{tracking}}" >
  {{else}}
    {{#if tracking}}
      <strong>{{ t "tracking" }}:</strong>
      {{tracking}}
    {{else}}
      {{ t "no_tracking_present" }}
    {{/if}}
  {{/if}}
</td>
<td class="actions">
  {{#if editing}}
    <a class="save-tracking fa fa-check no-text with-tip" data-action="save" title="{{ t "actions.save" }}" href="#"></a>
    <a class="cancel-tracking fa fa-cancel no-text with-tip" data-action="cancel" title="{{ t "actions.cancel" }}" href="#"></a>
  {{else}}
    <a class="edit-tracking fa fa-edit no-text with-tip" data-action="edit" title="{{ t "actions.edit" }}" href="#"></a>
  {{/if}}
</td>
